<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/logo_clar</item>
        <item name="colorPrimaryDark">@color/logo_mitja</item>
        <item name="colorAccent">@color/logo_fosc</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme"></style>

    <style name="tranlucent_logo_mitja" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/logo_clar_80_transparency</item>
    </style>
    <style name="tranlucent_gris" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/gris_transparent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custo_check_box">
        <item name="colorPrimary">@color/logo_mitja</item>
        <item name="colorPrimaryDark">@color/logo_fosc</item>
        <item name="colorAccent">@color/traffic_yellow</item>
    </style>

    <style name="custom_switch">
        <item name="colorPrimary">@color/logo_mitja</item>
        <item name="colorPrimaryDark">@color/logo_fosc</item>
        <item name="colorAccent">@color/complementari_logo_fosc</item>
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/logo_fosc</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/logo_mitja
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/logo_clar
        </item>
    </style>
</resources>
